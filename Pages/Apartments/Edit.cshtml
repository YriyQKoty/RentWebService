@page "{apartmentId:min(1)}"
@model RentWebService.Pages.Edit

<form method="post" enctype="multipart/form-data">

    <div class="container mt-5">
        <div class="row">
            <div class="mt-5">
                <input type="hidden" asp-for="Apartment.Id">
                <label>Address</label>
                <input asp-for="Apartment.Address">
            </div>
             <div class="mt-5">
                  <label for="desc" >Description</label>
                 <textarea id = "desc"  asp-for="Apartment.Description">Write some description here.</textarea>
               </div>                     
            <div class="mt-5">
                <label>Square</label>
                <input asp-for="Apartment.Square">
            </div>
              
            <div class="mt-5">
                <label for ="image">Image</label>
                <input id = "image" type="file" asp-for="Dto.FormFile">
              </div>      
            <div class="mt-5">
                <button class="btn btn-primary">
                    SUBMIT
                </button>
            </div>
        </div>


    </div>

</form>